#post-like
  .container
    padding: 12px 16px
    margin: 0 24px
    display: flex
    align-items: center
    justify-content: space-around

  .like-icon
    &:before
      font-family: font-icon
      content: "\f087"
      font-size: 2rem
      color: link-color

    &:hover
      cursor: pointer
      opacity: 0.8

  #like-count
    font-size: 1.2rem
    color: card-text-color
    font-weight: lighter
